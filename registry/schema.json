{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name",
    "type",
    "files"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the component"
    },
    "type": {
      "type": "string",
      "enum": [
        "components:ui",
        "components:layout",
        "components:lib"
      ],
      "description": "The type of component"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "npm package dependencies"
    },
    "registryDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Other components from the registry"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "content",
          "type"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "description": "Component files"
    },
    "tailwind": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object"
        }
      },
      "description": "Tailwind configuration"
    }
  }
}