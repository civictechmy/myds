{
  "name": "@civictechmy/myds-style",
  "version": "1.0.0",
  "private": true,
  "deprecated": "This package is deprecated. Use MYDS v2 via shadcn registry instead: npx shadcn@latest add myds-init --registry=https://civictechmy.github.io/myds/registry/style",
  "scripts": {
    "dev": "tailwindcss --input ./styles/input.tailwind.css --output ./styles/output.tailwind.css --watch",
    "build": "tailwindcss --input ./styles/input.tailwind.css --output ./dist/index.css --minify"
  },
  "files": [
    "README.md",
    "dist",
    "styles",
    "index.d.ts",
    "index.js",
    "tailwind.config.js"
  ],
  "exports": {
    ".": {
      "type": "./index.d.ts",
      "default": "./index.js"
    },
    "./full.css": {
      "default": "./dist/index.css"
    },
    "./color.css": {
      "default": "./styles/theme/color.css"
    },
    "./light.css": {
      "default": "./styles/theme/light.css"
    },
    "./dark.css": {
      "default": "./styles/theme/dark.css"
    }
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/postcss-js": "^4.1.0",
    "postcss": "^8.5.6",
    "postcss-js": "^5.0.1"
  },
  "peerDependencies": {
    "postcss": "^8.4.47",
    "tailwindcss": "^4.0.0"
  }
}
