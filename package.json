{
  "name": "myds",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=@civictechmy/myds-style && changeset publish --no-git-tag",
    "lint": "turbo lint",
    "start": "turbo start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "registry:generate": "tsx scripts/registry/build-multi.ts",
    "registry:generate:ui": "tsx scripts/registry/generate-ui.ts",
    "registry:generate:icons": "tsx scripts/registry/generate-icons.ts",
    "registry:build": "tsx scripts/registry/build-multi.ts",
    "registry:clean": "rm -rf registry/ui registry/icons registry/index.json",
    "deploy:prepare": "tsx scripts/deploy/prepare-gh-pages.ts",
    "deploy:clean": "rm -rf deploy"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.19.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=18"
  }
}
